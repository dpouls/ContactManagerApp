@model List<Contact>
@{
    ViewData["Title"] = "My Contacts";
}

<h2>Contact Manager</h2>
<a asp-controller="Movie" asp-action="Add">Add Contact</a>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Phone</th>
            <th>Email</th>
            <th>Category</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (Contact contact in Model)
        {
        <tr>
            <td>@contact.FirstName</td>
            <td>@contact.LastName</td>
            <td>@contact.Phone</td>
            <td>@contact.Email <td>
            <td>Category <td>
            <td>
                <!--The asp-route-slug attribute allows us to pass a Slug value from the movie in this row.This will display at the end of the url because we modified the startup.cs file to expect it.-->
                <a asp-controller="Contact" asp-action="Edit" asp-route-id="@contact.ContactId" asp-route-slug="@contact.Slug">Edit</a>
                <!--The asp-route-slug attribute allows us to pass a Slug value from the movie in this row.This will display at the end of the url because we modified the startup.cs file to expect it.-->
                <a asp-controller="Contact" asp-action="Delete" asp-route-id="@contact.ContactId" asp-route-slug="@contact.Slug">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>
